<header id="at-header" class="at-header at-headervtwo at-haslayout">
  <div class="at-navigationarea">
    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <strong class="at-logo">
            <%= link_to root_url do%>
              <%= image_tag image_path('logo2.png') %>
            <% end %>
          </strong>
          <div class="at-rightarea">
            <nav id="at-nav" class="at-nav navbar-expand-lg">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <i class="lnr lnr-menu"></i>
              </button>
              <div class="collapse navbar-collapse at-navigation" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item <%= active_inactive_header_class('about_us') %>">
                    <%= link_to 'About Us', about_us_path %>
                  </li>
                  <li class="nav-item <%= active_inactive_header_class('contact_us') %>">
                    <%= link_to 'Contact Us', contact_us_path %>
                  </li>
                </ul>
              </div>
            </nav>
            <div class="at-loginarea float-right">
              <% if current_user.present? %>
                <% if current_user.student? %>
                  <%= link_to 'My Bookings', student_bookings_path, class: 'at-loginoption' %>
                <% else %>
                  <%= link_to 'My Dashboard', dashboard_index_path, class: 'at-loginoption' %>
                <% end %>
                <%= link_to "Edit Profile", edit_user_registration_path, class: 'at-registeroption' %>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'at-registeroption' %>
              <% else %>
                <%= link_to 'Login', popup_forms_path(name: 'login'), remote: true, class: 'at-registeroption' %>
                <%= link_to 'Register', popup_forms_path(name: 'register'), remote: true, class: 'at-registeroption' %>
              <% end %>
              <div class="at-detailsbtn-topbar">
                <%= link_to 'Become a Host', popup_forms_path(name: 'host'), remote: true, class: 'at-btn at-btnactive' %>
                <!--<em>OR</em>
                <a href="javascript:void(0);" class="at-btn at-btnactive at-btntwo" data-toggle="modal" data-target="#findproperty">Find Property</a> -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- Header End -->
<!-- Login/SignUp/Host/ForgotPassword/Confirmation Popup Forms Start-->
<div class="modal fade at-loginpopup" tabindex="-1" role="dialog" id="deviseform" data-backdrop="static">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="at-modalcontent modal-content">
      <div class='errors'></div>
      <div class="at-popuptitle">
        <h4 class='popup-heading'></h4>
        <a href="javascript:void(0);" class="at-closebtn close"><i class="lnr lnr-cross" data-dismiss="modal"></i></a>
      </div>
      <div class="modal-body" id='devise-forms'>
      </div>
    </div>
  </div>
</div>
<!-- Login/SignUp/Host/ForgotPassword/Confirmation Popup Forms End-->
