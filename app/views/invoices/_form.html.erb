<%= form_with(model: invoice, local: true, id: 'invoice_form') do |form| %>
  <%= render 'shared/error_messages', target: invoice %>
  <%= hidden_field_tag 'invoice[booking_id]', @booking&.id %>
  <%= hidden_field_tag 'invoice[date]', Date.today %>
  <%= hidden_field_tag 'invoice[amount]', @booking.rent_amount %>

  <div class='row'>
    <div class="form-group col-sm-12 mb-3">
      <%= "Apartment Name: #{@booking.apartment_title}" %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= "Amount: #{@booking.rent_amount}" %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= "Date: #{date_format(Date.today)}" %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= "Arrival Date: #{date_format(@booking.start_date)}" %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= "Departure Date: #{date_format(@booking.end_date)}" %>
    </div>
    <div class="modal-footer">
      <%= link_to "Back", '', data: { dismiss: 'modal' }, class: 'btn btn-dark' %>
      <%= button_tag 'Confirm', class:"btn btn-success", type: "submit" %>
    </div>
  </div>
<% end %>
