<%= form_with(model: booking, apartment: apartment, local: true, id: 'bookings_form') do |form| %>
  <%= render 'shared/error_messages', target: booking %>
  <%= hidden_field_tag 'booking[user_id]', current_user&.id %>
  <%= hidden_field_tag :apartment, apartment %>
  <div class='row'>
    <div class="form-group col-sm-12">
      <%= form.label t('booking.status'), class:"col-form-label" %><br/>
      <%= form.text_field :status, class: 'form-control' %>
    </div>
  </div>
  <div class='row'>
    <div class="form-group col-sm-6">
      <%= form.label t('booking.start_date'), class:"col-form-label" %><br/>
      <%= form.text_field :start_date, class: 'form-control', id: 'start-date' %>
    </div>
    <div class="form-group col-sm-6">
      <%= form.label t('booking.end_date'), class:"col-form-label" %><br/>
      <%= form.text_field :end_date, class: 'form-control', id: 'end-date' %>
    </div>
  </div>
  <%= link_to 'Back', apartments_path, class: 'btn btn-dark mt-4 pr-4 pl-4' %>
  <%#= link_to "Let's go", add_payment_method_path, remote: true, class: "btn btn-primary" %>
  <%#= button_tag "Let's Go", class:"btn btn-primary mt-4 pr-4 pl-4 pay_now", id: 'billing-create-payment-method',data: {apartment_id: apartment, user_id: current_user&.id}, remote: true %>
  <%= button_tag 'Save', class:"btn btn-primary mt-4 pr-4 pl-4", type: "submit" %>
<% end %>
<script type="text/javascript">
  $(document).ready(function (e) {
    $('#start-date, #end-date').datetimepicker({
      format: 'DD/MM/YYYY'
    });
  });
</script>
