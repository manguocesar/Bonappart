<div id="preloader">
  <div class="loader"></div>
</div>
<div class="login-area login-s2">
  <div class="container">
    <div class="login-box ptb--100">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= render 'shared/messages' %>
        <div class="login-form-head">
          <h4>Log In</h4>
        </div>
        
        <div class="login-form-body">
          <div class="form-gp focused">
            <label for="exampleInputEmail1">Email</label>
            <%= f.text_field :email, id: 'exampleInputEmail1', autocomplete: 'off' %>
            <i class="ti-email"></i>
          </div>
          <div class="form-gp focused">
            <label for="exampleInputPassword1">Password</label>
            <%= f.password_field :password, autocomplete: "current-password", id: 'exampleInputPassword1' %>
            <i class="ti-lock"></i>
          </div>
          <div class="submit-btn-area">
            <button id="form_submit" type="submit">Sign in <i class="ti-arrow-right"></i></button>
          </div>
          <div class="form-footer text-center mt-5">
            <p class="text-muted"><%= render "users/shared/links" %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
  $(document).ready(function () {
    LoginForm.validate();
  })
</script>

