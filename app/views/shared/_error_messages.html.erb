<% if target && target.errors.any? %>
  <% error = target.errors.full_messages %>
  <div id="error_explanation" class="alert alert-danger">
    <button type="button" class="close" data-dismiss="alert">Ã—</button>
    <% if error.length == 1 %>
      <%= error.first %>
    <% else %>
      <ul>
        <% error.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
<% end %>
