<%= form_with(model: subscription, url: landlord_subscriptions_path, local: subscription&.apartment&.singapore?, id: 'subscription_form') do |form| %>
  <%= render 'shared/error_messages', target: subscription %>
  <%= hidden_field_tag 'subscription[apartment_id]', @apartment&.id %>
  <%= hidden_field_tag 'subscription[user_id]', @landlord&.id %>
  <%= hidden_field_tag 'subscription[started_at]', Date.today %>
  <%= hidden_field_tag 'subscription[expired_at]', expiration_date %>
  <%= hidden_field_tag 'invoice[invoice_number]', random_invoice_number %>
  <%= hidden_field_tag 'invoice[date]', Date.today %>
  <%= hidden_field_tag 'invoice[amount]', @apartment.landlord_listing_fee %>

  <div class='row'>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Apartment Name:', class:"col-form-label" %>
      <%= @apartment.title %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Amount:', class:"col-form-label" %>
      <%= @apartment.landlord_listing_fee %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Started at:', class:"col-form-label" %>
      <%= Date.today %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Expired at:', class:"col-form-label" %>
      <%= expiration_date %>
    </div>
  </div>
  <div class="row">
    <div class="col col-6">
      <%= link_to "Back", '', data: { dismiss: 'modal' }, class: 'at-btn btn-block' %>
    </div>
    <div class="col col-6">
      <%= button_tag 'Confirm', class:"at-btn btn-block at-btnactive", type: "submit" %>
    </div>
  </div>
<% end %>
