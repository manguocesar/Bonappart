<div class="modal-header">
  <h5 class="modal-title"><%= t('inquiry.instructions') %></h5>
  <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
</div>
<div class="modal-body">
  <h6><%= t('inquiry.login_message') %></h6>
</div>
<div class="modal-footer text-left">
  <%= link_to 'Login', popup_forms_path(name: 'login'), remote: true, class: 'at-btn', data: { dismiss: 'modal' } %>
  <%= link_to 'Register', popup_forms_path(name: 'register'), remote: true, class: 'at-btn', data: { dismiss: 'modal' } %>
</div>
