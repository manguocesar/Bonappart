<div class="animated fadeIn">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <strong class="card-title"><%= t('admin.apartment_type.title') %></strong>
          <%= link_to new_admin_apartment_type_path, remote:true, class: 'btn at-btn pull-right' do %>
            <i class="fa fa-plus" aria-hidden="true"></i> <%= t('admin.apartment_type.add_apartment_type') %>
          <% end %>
        </div>
        <div class="card-body">
          <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
            <div class="row">
              <div class="col-sm-12">
                <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer"
                  role="grid" aria-describedby="bootstrap-data-table_info">
                  <thead>
                    <tr role="row">
                      <th class="sorting_asc" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('admin.apartment_type.title') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('admin.apartment_type.amount') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="3" style="width:120px;"><%= t('actions') %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @apartment_types.each do |apartment_type| %>
                      <tr>
                        <td><%= apartment_type.name %></td>
                        <td><%= apartment_type.amount %></td>
                        <td><%= link_to 'Edit', edit_admin_apartment_type_path(apartment_type), remote: true %></td>
                        <td><%= link_to 'Delete', admin_apartment_type_path(apartment_type), method: :delete, data: { confirm: t('confirmation') } %></td>
                      </tr>
                    <% end %>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render '/shared/modal_window', locals: { modelId: 'apartmentTypeModal' } %>
