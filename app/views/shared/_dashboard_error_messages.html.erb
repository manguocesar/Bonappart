<% unless flash.empty? %>
  <% flash.each do |f| %>
    <div class='<%= "alert #{build_alert_classes(f.first.to_s)} alert-dismiss fade show" %>' role="alert">
      <% if (f[1].is_a?Array) %>
        <%= f[1].join("<br />").html_safe %>
      <% else %>
        <%= f[1] %>
      <% end %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
<% end %>
