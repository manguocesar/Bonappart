<% url = payment_url(params)  %>
<%= form_with url: url,  id: 'stripe-form' do |form| %>
  <%= hidden_field_tag 'payment[booking_id]', params[:booking_id] %>
  <%= hidden_field_tag 'payment[subscription_id]', params[:subscription] %>
  <%= hidden_field_tag 'payment[amount]', params[:amount] %>
  <h2 class='offset-md-4 mt-2 mb-2'>Payment details</h2>
  <div class='row ml-4 mr-4'>
    <div class="form-group col-sm-4">
      <%= form.label 'payment_type', class:"col-form-label" %>
      <%= select_tag 'payment[payment_type]', options_for_select(Payment.payment_types.map {|k, v| [k.humanize.capitalize, k]}), class: 'form-control selectpicker', id: 'payment_type', include_blank: 'Please select payment type' %>
    </div>
    <div class="form-group col-sm-4">
      <%= form.label 'amount', class:"col-form-label" %>
      <%= form.text_field 'payment[amount]', value: params[:amount], class: 'form-control', disabled: true, id: 'amount' %>
    </div>
    <div class="form-group col-sm-4">
      <%= form.label 'remarks', class:"col-form-label" %>
      <%= form.text_field 'payment[remarks]', class: 'form-control remarks' %>
    </div>
  </div>
  <%= render partial: 'address_details' , locals: { form: form } %>
  <div class='offset-md-5 mt-3 mb-4' id='stripePaymentForm'>
    <button type="button" class="btn btn-primary" data-toggle="modal" id="paymentFormSub">
      Submit
    </button>
  </div>
  <!-- Modal -->
  <div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="paymentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="paymentModalLabel">Payment Initiated</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Click on "Pay with Card" to initiate the payment.
          We didn't save any card information.
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal" style="font-size:0.975rem;border-radius:7px;">Close</button>
          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="pk_test_51HZY7lFYh30SOXdPiBXS9R16JA8sU4QpBTLzlWoSsnCRQhPc6NSRxsxDl047P6A71UWBSZcwduL3o5WQS6MvYAw000dcmzAW6p"
            data-description="Book Accomodation"
            data-email = "<%= current_user.email %>"
            data-locale="auto">
          </script>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  var net_rate = "<%= find_net_rate %>"
  var deposit_amount = "<%= find_deposit_amount %>"
  var amount_field_value = $('#amount').val();

  if(amount_field_value == net_rate){
    $('#payment_type').val('full')
  } else if (amount_field_value == deposit_amount){
    $('#payment_type').val('deposit')
  }

  $('#payment_type').change(function () {
    if ($('#payment_type').val() == 'full' ){
      $('#amount').val(net_rate)
    } else {
      $('#amount').val(deposit_amount)
    }
  })

  $('#paymentFormSub').on('click', function () {
    PaymentForm.validate();
    var is_valid = $('#stripe-form').valid();
    if(is_valid){
      $('#paymentModal').modal('show');
    } else {
      $('#paymentModal').modal('hide');
    }
  })
</script>
