<div class="animated fadeIn">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <strong class="card-title"><%= t('landlord.apartments') %></strong>
          <%= link_to new_landlord_apartment_path, class: 'btn at-btn pull-right' do %>
            <i class="menu-icon ti-plus"><%= t('landlord.add_apartment') %></i>
          <% end %>
        </div>
        <div class="card-body">
          <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
            <div class="row">
              <div class="col-sm-12">
                <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer"
                  role="grid" aria-describedby="bootstrap-data-table_info">
                  <thead>
                    <tr role="row">
                      <th class="sorting_asc" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('apartment.title') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('apartment.distance_from_university') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('apartment.availability') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('rent.deposit_amount') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="3" style="width:120px;"><%= t('actions') %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @apartments.each do |apartment| %>
                      <tr role="row" class="odd">
                        <td><%= apartment&.title %></td>
                        <td><%= apartment&.distance_from_university %></td>
                        <td><%= apartment&.departure_date_availabilty %></td>
                        <td><%= apartment&.rent_rate&.deposit_amount %></td>
                        <td>
                          <%= link_to landlord_apartment_path(apartment) do %>
                            <i class='ti ti-eye ml-2'></i>
                          <% end %>
                          <%= link_to edit_landlord_apartment_path(apartment) do %>
                            <i class='ti ti-pencil ml-2'></i>
                          <% end %>
                          <%= link_to landlord_apartment_path(apartment), method: :delete, data: { confirm: t('confirmation') } do %>
                            <i class='ti ti-trash ml-2'></i>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="row">
              <%= paginate @apartments %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
