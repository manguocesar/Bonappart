<div class="modal-header">
  <h5 class="modal-title"><%= t('invoice.title') %></h5>
  <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
</div>
<div class="modal-body">
  <div class='row'>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.invoice_number')}: #{@invoice.invoice_number}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.date')}: #{date_format(Date.today)}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.apartment_name')}: #{@invoice.apartment_title}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.start_date')}: #{date_format(@invoice.start_date)}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.end_date')}: #{date_format(@invoice.end_date)}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.amount')}: #{@invoice.payment_amount}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.status')}: #{@invoice.status}" %>
    </div>
    <div class="modal-footer">
      <%= link_to "Back", '', data: { dismiss: 'modal' }, class: 'btn at-btn' %>
      <%= link_to 'Confirm', invoice_payment_path(@invoice), class: 'btn at-btn' %>
    </div>
  </div>
</div>
