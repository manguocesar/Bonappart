<%= render 'shared/header' %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>
  <h2 class='text-center'>Change your password</h2>
  <div class='row text-center'>
    <div class="form-group">
      <%# if @minimum_password_length %>
        <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
      <%# end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: 'New password' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password' %>
    </div>

    <div class="at-btnarea">
      <%= f.submit "Change my password", class: 'at-btn mt-2' %>
    </div>
  </div>
<% end %>

