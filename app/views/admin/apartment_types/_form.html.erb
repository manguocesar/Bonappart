<%= form_with(model: apartment_type, url: url, id: 'apartment_type_form') do |form| %>
  <%= render 'shared/error_messages', target: apartment_type %>
  <div class='row'>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Apartment Type', class:"col-form-label" %><br/>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Apartment Amount', class:"col-form-label" %><br/>
      <%= form.text_field :amount, class: 'form-control', required: true %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label t('admin.apartment_type.status'), class:"col-form-label" %>
      <%= select_tag(:status, options_for_select(ApartmentType.statuses.map {|key, _| [key.humanize.capitalize, key]}, apartment_type&.status), class: "form-control selectpicker", name: "apartment_type[status]", include_blank: 'Status') %>
    </div>
    <div class="form-group col-sm-12 mb-3 text-right">
      <%= link_to "Back", '', data: { dismiss: 'modal' }, class: 'btn btn-secondary' %>
      <%= button_tag 'Save', class:"btn at-btn at-btn", type: "submit" %>
    </div>
  </div>
<% end %>
<script type="text/javascript">
  $(document).ready(function (e) {
    $('[data-toggle="popover"]').popover({ html:true,placement:'top' });
    ApartmentTypeForm.validate();
  });
</script>
