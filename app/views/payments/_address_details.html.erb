<%= form.fields_for :address, @payment.address do |f| %>
  <div class='row ml-4 mr-4'>
    <div class="form-group col-sm-6">
      <%= f.label t('address.address'), class:"col-form-label" %><br/>
      <%= f.text_field :address, class: 'form-control' %>
    </div>
     <div class="form-group col-sm-6">
      <%= f.label t('address.postal_code'), class:"col-form-label" %><br/>
      <%= f.text_field :postal_code, class: 'form-control' %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.label t('address.city'), class:"col-form-label" %><br/>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.label t('address.state'), class:"col-form-label" %><br/>
      <%= f.text_field :state, class: 'form-control' %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.label t('address.country'), class:"col-form-label" %><br/>
      <%= f.text_field :country, class: 'form-control' %>
    </div>
  </div>
<% end %>
