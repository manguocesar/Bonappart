<div class="modal-header">
  <h5 class="modal-title"><%= t('invoice.title') %></h5>
  <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
</div>
<div class="modal-body">
  <div class='row'>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.invoice_number')}: #{@invoice.invoice_number}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.date')}: #{date_format(Date.today)}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.apartment_name')}: #{@invoice.apartment_title}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.arrival_date')}: #{date_format(@invoice.arrival)}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.departure_date')}: #{date_format(@invoice.departure)}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.amount')}: #{@invoice.apartment_rent}" %>
    </div>
    <div class="col-sm-12 mb-3">
      <%= "#{t('invoice.status')}: #{@invoice.status}" %>
    </div>
    <div class="modal-footer">
      <%= link_to "Back", '', data: { dismiss: 'modal' }, class: 'btn btn-dark' %>
      <%= link_to 'Confirm', add_payment_method_path(booking_id: @invoice.booking&.id), class: 'btn btn-success' %>
    </div>
  </div>
</div>
