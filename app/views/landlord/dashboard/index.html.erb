<div class="content mt-3">
  <div class="col-sm-12">
    <%= render 'shared/dashboard_error_messages' %>
  </div>
  <% @cards.each_with_index do |card, index| %>
    <%= link_to landlord_apartments_path(type: change_string_to_param(card.first)) do %>
      <div class="col-sm-6 col-lg-3">
        <div class="card text-white bg-flat-color-<%= index + 1 %>">
          <div class="card-body pb-0">
            <h4 class="mb-0">
              <span class="count"><%= card.last %></span>
            </h4>
            <p class="text-light"><%= card.first %></p>
            <div class="chart-wrapper px-0" style="height:70px;" height="70">
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div> <!-- .content -->
