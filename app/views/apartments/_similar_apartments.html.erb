<!-- Partial for displaying similar apartment by location -->
<% if @similar_apartments.present? %>
  <h2 style='text-align:center', class='mt-3'>Similar Accomodations </h2>
  <% @similar_apartments.each do |apartment| %>
    <div class="col-lg-4 col-md-6 mt-5">
      <div class="card card-bordered">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner" role="listbox">
            <% apartment.images.each do |image| %>
              <div class="carousel-item <%= apartment.active_class(image) %>">
                <%= image_tag url_for(image), class: "d-block w-100", style:"width:640px; height:300px;" %>
              </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="card-body">
          <h5 class="title"><%= apartment.title %></h5>
          <h6 class="card-text"><%= t('apartment.area') %>: <%= apartment.area %></h6>
          <h6 class="card-text"><%= t('apartment.total_bedrooms') %>: <%= apartment.total_bedrooms %></h6>
          <h6 class="card-text"><%= t('rent.net_rate') %>: <%= apartment&.rent_rate&.net_rate %></h6>
          <%= link_to  'View more', apartment_path(apartment), class: 'btn btn-success mt-4' %> 
        </div>
      </div>
    </div>
  <% end %>
<% end %>
