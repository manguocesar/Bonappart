<%= render 'shared/header' %>
<%= render 'shared/header_bg' %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <%= render 'shared/messages' %>
  <h4 class='text-center'>Forgot your password?</h4>
  <div class='row text-center'>
    <div class="form-group">
      <label for="exampleInputEmail1">Email</label>
      <%= f.text_field :email, id: 'exampleInputEmail1', autocomplete: 'off' %>
    </div>
    <div class="at-btnarea">
      <button id="form_submit" type="submit" class='at-btn mt-2'>Send me reset password instructions<i class="ti-arrow-right"></i></button>
      <%#= render "users/shared/links" %>
    </div>
  </div>
<% end %>
   