<div class="animated fadeIn">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <strong class="card-title">Data Table</strong>
        </div>
        <div class="card-body">
          <div id="bootstrap-data-table_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">
            <div class="row">
              <div class="col-sm-12">
                <table id="bootstrap-data-table" class="table table-striped table-bordered dataTable no-footer"
                  role="grid" aria-describedby="bootstrap-data-table_info">
                  <thead>
                    <tr role="row">
                      <th class="text-center"><%= t('sr_no') %></th>
                      <th class="sorting_asc" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('subscription.apartment') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('subscription.amount') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('subscription.start_date') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('subscription.end_date') %></th>
                      <th class="sorting" tabindex="0" aria-controls="bootstrap-data-table" rowspan="1" colspan="1"><%= t('subscription.status') %></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @subscriptions.each.with_index(1) do |subscription, index| %>
                      <tr role="row" class="odd">
                        <td class="text-center"><%= pagination_params + index %></td>
                        <td><%= subscription.apartment.title %></td>
                        <td><%= "â‚¬#{check_float(subscription&.invoice&.amount)}" %></td>
                        <td><%= date_format(subscription.started_at) %></td>
                        <td><%= date_format(subscription.expired_at) %></td>
                        <td><%= subscription_status(subscription) %></td>
                      </tr>
                    <% end %>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
            <div class="row">
              <%= paginate @subscriptions %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
