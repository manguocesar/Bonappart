<!-- Partial for displaying similar apartment by location -->
<% if @similar_apartments.present? %>
  <h2 style='text-align:center', class='mt-3'>Similar Accomodations </h2>
  <div class='row'>
  <% @similar_apartments.limit(3).each do |apartment| %>
    <div class='col-12 col-md-6 col-xl-4'>
      <div class="at-featured-holder">
        <div class="at-featuredslider owl-carousel owl-loaded owl-drag">
          <div class="owl-stage-outer owl-height" style="height: 230px;">
            <div class="owl-stage" style="transform: translate3d(-700px, 0px, 0px); transition: all 0s ease 0s; width: 2100px;">
              <% apartment.images.each do |image| %>
                <div class="owl-item cloned" style="width: 350px;">
                  <figure class="item">
                    <a href="<%= apartment_path(apartment) %>"><%= image_tag url_for(image) %></a>
                    <figcaption>
                      <div class="at-slider-details">
                        <a href="<%= apartment_path(apartment) %>" class="at-tag">Featured</a>
                        <a href="<%= apartment_path(apartment) %>" class="at-tag at-rated">Top Rated</a>
                        <span class="at-photolayer"><i class="fas fa-layer-group"></i><%= apartment.images.count %> Photos</span>
                        <a href="<%= apartment_path(apartment) %>" class="at-like at-liked">Saved<i class="far fa-heart"></i></a>
                      </div>
                    </figcaption>
                  </figure>
                </div>
              <% end %>
          </div>
        </div>
        <div class="at-featur-nav">
          <div class="at-featurprev">
            <span class="ti-angle-left"></span>
          </div>
          <div class="at-featurnext">
            <span class="ti-angle-right"></span>
          </div>
        </div>
        <div class="owl-dots disabled"></div>
        </div>
        <div class="at-featured-content">
          <div class="at-featured-head">
            <div class="at-featured-tags"><a href="<%= apartment_path(apartment) %>"><%= apartment.apartment_type %></a> </div>
            <div class="at-featured-title">
              <h3><%= apartment.title %><span>â‚¬ <%= apartment.rent_rate&.net_rate %></span></h3>
              <div class="at-userimg at-verifieduser">
                <%= image_tag url_for('featured-img/user-img/img-06.jpg') %>
                <i class="fa fa-shield-alt"></i>
              </div>
            </div>
            <ul class="at-room-featured">
              <li><span><i><%= image_tag url_for('featured-img/icons/img-02.jpg') %></i> <%= apartment.total_bedrooms %> Bedrooms</span></li>
              <li><span><i><%= image_tag url_for('featured-img/icons/img-03.jpg') %></i> <%= apartment.shower_room %> Shower room</span></li>
            </ul>
          </div>
          <div class="at-featured-footer">
            <address><%= apartment.area %></address>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<% end %>
