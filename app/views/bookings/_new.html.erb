<% if user_signed_in? %>
  <% if current_user.student? %>
    <div class="modal-header">
      <h5 class="modal-title">Book Accomodation</h5>
      <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
    </div>
    <div class="modal-body">
      <%= render "form", booking: @booking, apartment: params[:apartment_id], url: bookings_path, method: :post  %>
    </div>
  <% end %>
<% else %>
  <%= render '/shared/login_instructions' %>
<% end %>

