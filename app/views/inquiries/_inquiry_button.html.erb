<% if user_signed_in? %>
  <% if current_user.student? %>
    <%= link_to 'Contact Landlord for more details', new_inquiry_path(apartment: params[:id]), class: 'at-btn at-btnactive', data: { remote: true } %>
  <% end %>
<% else %>
  <%= link_to 'Contact Landlord for more details', render_login_path, class: 'at-btn at-btnactive', data: { remote: true } %>
<% end %>
