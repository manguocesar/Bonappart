<% unless flash.empty? %>
  <div id="error_explanation" class='alert-items'>
    <% flash.each do |f| %>
      <% type = f.first.to_s.eql?('error') ? 'alert' : f.first.to_s %>
      <div class='<%= "alert alert-#{type} alert-dismiss fade show" %>' role="alert">
        <% if (f[1].is_a?Array) %>
          <%= f[1].join("<br />").html_safe %>
        <% else %>
          <%= f[1] %>
        <% end %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
  </div>
<% end %>
