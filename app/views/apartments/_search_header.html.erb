<div class='container'>
  <div class="row justify-content-center">
    <div class="col-12 col-md-12 col-lg-12 col-xl-11 push-xl-1">
      <div class="at-slider-content" style="max-width:1100px;">
        <div class="at-title">
          <h4>Start Your Search Here</h4>
        </div>
        <div class="remove-flex row">
          <div class="col-12 col-md-12 col-lg-6 float-left">
            <%= form_tag(apartments_path, method: :get, remote: params[:remote_flag], class: 'at-formtheme at-formbanner') do |form| %>
              <fieldset class="at-datetime">
                <div class="form-group">
                  <h6>Available From</h6>
                  <%= select_tag 'search[month]', options_for_select(Constant::MONTH_ARRAY), class: 'form-control col-sm-5 selectpicker', include_blank: t('apartment.month') %>
                  <%= select_tag 'search[year]', options_for_select(Constant::YEAR_ARRAY), class: 'form-control col-sm-5 selectpicker', include_blank: t('apartment.year') %>
                </div>
                <div class="form-group">
                  <div class="at-select">
                    <%= select_tag('sort[distance_from_university]', options_for_select(Constant::DISTANCE_FROM_UNIVERSITY), class: "form-control", include_blank: t('apartment.distance_from_campus')) %>
                  </div>
                </div>
                <div class="at-widget">
                  <div class="at-widgettitle at-collapsetitle" id="heading5" data-toggle="collapse" data-target="#collapse5" role="heading">
                    <h3>Price Range:</h3>
                  </div>
                  <div class="at-collapseholder collapse show" id="collapse5" aria-labelledby="heading5">
                    <div class="at-widgetcontent">
                      <div class="at-areasizebox">
                        <input type="text" id="at-rangeamount" name="<%= 'sort[rent]' %>" readonly="">
                      </div>
                      <div id="at-rangeslider" class="at-rangeslider at-themerangeslider ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content">
                        <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                        <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default" style="left: 12%;"></span>
                        <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default" style="left: 80%;"></span>
                      </div>
                    </div>
                  </div>
                </div>
              </fieldset>
            </div>
            <div class="col-12 col-md-12 col-lg-6 float-left">
              <legend class="at-formtitle"><%= t('admin.apartment_type.title') %></legend>
              <div class="form-group">
                <div class="at-room-radioholder at-room-radiovtwo">
                  <% apartment_type_collection.each do |apartment_type| %>
                    <span class="at-radio">
                      <input id="at-private-<%= apartment_type.id %>" type="radio" name="<%= 'search[apartment_type]' %>" value="<%= apartment_type.name %>">
                      <label for="at-private-<%= apartment_type.id %>">
                        <%= image_tag apartment_type_image(apartment_type) %>
                        <span><em><%= apartment_type.name %></em></span>
                      </label>
                    </span>
                  <% end %>
                </div>
              </div>
              <div class="form-group at-btnarea">
                <%= button_tag t('filter_results'), class:"at-btn sort-filter", type: "submit" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
