<%= form_for [apartment_type], url: admin_apartment_types_path, id: 'apartment_type_form', remote: true do |form| %>
  <%= render 'shared/error_messages', target: apartment_type %>

  <div class='row'>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Apartment Type', class:"col-form-label" %><br/>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Apartment Amount', class:"col-form-label" %><br/>
      <%= form.text_field :amount, class: 'form-control' %>
    </div>
    <div class="modal-footer">
      <%= link_to "Back", '', data: { dismiss: 'modal' }, class: 'btn btn-dark' %>
      <%= button_tag 'Save', class:"btn btn-success", type: "submit" %>
    </div>
  </div>
<% end %>
