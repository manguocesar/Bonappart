<%= form_with(model: inquiry, local: true, id: 'inquiry_form') do |form| %>
  <%= render 'shared/error_messages', target: inquiry %>
  <%= hidden_field_tag 'inquiry[sender_id]', current_user&.id %>
  <%= hidden_field_tag 'inquiry[email]', current_user&.email %>
  <%= hidden_field_tag 'inquiry[receiver_id]', @landlord&.id %>

  <div class='row'>
    <div class="form-group col-sm-12">
      <fieldset disabled>
        <%= form.label t('users.email'), class:"col-form-label" %><br/>
        <%= form.text_field :email, value: current_user&.email, class: 'form-control' %>
        <small class="form-text text-muted">We'll never share email with anyone else.</small>
      </fieldset>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Message', class:"col-form-label" %><br/>
      <%= form.text_area :message, class: 'form-control' %>
    </div>
    <div class="modal-footer">
      <%= link_to "Back", '', data: { dismiss: 'modal' }, class: 'btn btn-secondary' %>
      <%= button_tag 'Save', class:"btn btn-primary", type: "submit" %>
    </div>
  </div>
<% end %>