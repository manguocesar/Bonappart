<%= form_with(model: subscription, remote: true, id: 'subscription_form') do |form| %>
  <%= render 'shared/error_messages', target: subscription %>
  <%= hidden_field_tag 'subscription[apartment_id]', current_user&.id %>
  <%= hidden_field_tag 'subscription[user_id]', @landlord&.id %>

  <div class='row'>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Apartment Name', class:"col-form-label" %><br/>
      <%= @apartment.title %>
      <%#= form.text_area :message, class: 'form-control' %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Amount', class:"col-form-label" %><br/>
      <%= 500 %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Started at:', class:"col-form-label" %><br/>
      <%= Date.today %>
    </div>
    <div class="form-group col-sm-12 mb-3">
      <%= form.label 'Expired at:', class:"col-form-label" %><br/>
      <%= expiration_date %>
    </div>
    <div class="modal-footer">
      <%= link_to "Back", '', data: { dismiss: 'modal' }, class: 'btn btn-dark' %>
      <%= button_tag 'Confirm', class:"btn btn-success", type: "submit" %>
    </div>
  </div>
<% end %>
