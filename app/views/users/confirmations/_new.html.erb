<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { id: 'new_confirmation', method: :post }, remote: true) do |f| %>
  <%= devise_error_messages! %>
  <div class="row text-center">
    <div class="form-group">
      <%= f.text_field :email, id: 'exampleInputEmail1', placeholder: 'email', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
    </div>
    <div class="at-btnarea">
      <button id="form_submit" type="submit" class="at-btn mt-2">Resend Confirmation</button>
    </div>
    </div>
  </div>
<% end %>
<div class="form-footer text-center mt-4">
  <%- if controller_name != 'sessions' %>
    <p class='text-muted'>
      Have an account?
      <%= link_to "Sign in", popup_forms_path(name: 'login'), remote: true %>
    </p>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <p class='text-muted'>
      Don't have an account?
      <%= link_to "Sign up", popup_forms_path(name: 'register'), remote: true %>
    </p>
  <% end %>
</div>
